    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid container-background container-login">
      <%= render 'layouts/navigation' %>
      <div class="container">

        <p class="notice"><%= notice %></p>
